{
  "manifest_version": 3,
  "name": "LinkedIn Scraper",
  "version": "1.0",
  "description": "Scrapes LinkedIn profiles and sends data to backend API",
  "permissions": ["tabs", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://127.0.0.1:3000/*"
  ]
}
